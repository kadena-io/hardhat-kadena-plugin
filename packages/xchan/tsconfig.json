{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "lib",
    "experimentalDecorators": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "./lib/**/*"]
}
